<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:focusableInTouchMode="true"
              android:layout_height="wrap_content" android:paddingLeft="16dp" android:paddingRight="16dp">

    <TextView
            android:text="Perbarui Profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView14" android:textSize="19dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_marginTop="10dp">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/txNamaLengkapDEP" android:layout_weight="1" android:hint="Nama Lengkap"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/txEmailDEP" android:layout_weight="1"
                android:hint="Email "/>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>